{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Configuration for the GitHub Issue Loop workflow (Ralph Pattern)",
  "branchPrefix": "ai/issue-",
  "prdLocation": "prd.json",
  "archiveLocation": "archive/",
  "maxTaskAttempts": 3,
  "maxDebugAttempts": 3,
  "labels": {
    "trigger": "AI",
    "planning": "AI: Planning",
    "approved": "AI: Approved",
    "inProgress": "AI: In Progress",
    "testing": "AI: Testing",
    "blocked": "AI: Blocked",
    "review": "AI: Review",
    "complete": "AI: Complete"
  },
  "commentPrefixes": {
    "plan": "## ğŸ“‹ Implementation Plan",
    "approved": "## âœ… Plan Approved",
    "taskLog": "## ğŸ“ Task Log:",
    "codeReview": "## ğŸ” Code Review:",
    "reviewApproval": "## ğŸ§¾ Review Approval Needed",
    "discovery": "## ğŸ” Discovery Note",
    "patterns": "## ğŸ” Codebase Patterns",
    "testingCheckpoint": "## ğŸ§ª Testing Checkpoint",
    "debugSession": "## ğŸ”§ Debug Session",
    "debugFixed": "## âœ… Debug Fix Applied",
    "debugBlocked": "## ğŸš« Debug Blocked",
    "finalReport": "## ğŸ“Š Final Report",
    "compactedSummary": "## ğŸ§¾ Compacted Summary",
    "wisp": "## ğŸª¶ Wisp",
    "browserVerification": "## ğŸŒ Browser Verification:",
    "replanCheckpoint": "## ğŸ” Replan Checkpoint"
  },
  "taskLogJsonVersion": 1,
  "summaryEveryNTaskLogs": 5,
  "wispDefaultTtlMinutes": 90,
  "review": {
    "enabled": true,
    "autoEnqueueSeverities": [
      "critical",
      "high"
    ],
    "approvalRequiredSeverities": [
      "medium",
      "low"
    ],
    "minConfidenceForAutoEnqueue": 0.75,
    "maxFindingsPerReview": 5
  },
  "commitPrefixes": {
    "task": "feat",
    "state": "chore",
    "debug": "fix"
  },
  "execution": {
    "gateMode": "enforce",
    "eventEvidence": {
      "required": true
    },
    "verify": {
      "commandTimeoutSeconds": 600,
      "maxOutputLinesPerCommand": 80,
      "globalVerifyCommands": [],
      "securityVerifyCommands": [],
      "runSecurityVerifyOnEveryTask": false
    },
    "searchEvidence": {
      "required": true,
      "minQueries": 2
    },
    "browserVerification": {
      "requiredForUiTasks": true,
      "hardFailWhenUnavailable": true,
      "allowedTools": [
        "playwright",
        "dev-browser"
      ]
    },
    "placeholder": {
      "enabled": true,
      "patterns": [
        "TODO\\b",
        "FIXME\\b",
        "placeholder\\b",
        "stub\\b",
        "not implemented",
        "mock implementation"
      ],
      "excludePathRegex": [
        "(^|/)test(s)?/",
        "\\.md$"
      ]
    },
    "stalePlan": {
      "enabled": true,
      "sameTaskRetryThreshold": 2,
      "consecutiveRetryThreshold": 4
    },
    "context": {
      "preferCompactedSummary": true,
      "maxTaskLogs": 8,
      "maxDiscoveryNotes": 6,
      "maxReviewLogs": 4
    }
  },
  "memory": {
    "autoSyncDocs": true,
    "minConfidence": 0.8,
    "docTargets": [
      "AGENTS.md",
      "CLAUDE.md"
    ],
    "maxPatternsPerTask": 3,
    "managedSectionMarker": "issues-loop:auto-patterns"
  }
}
